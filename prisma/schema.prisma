generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Receiver {
  id           String   @id @default(uuid())
  name         String
  document     String
  bank         String
  bank_agency  String
  bank_account String
  status       String
  pix_key_type String
  pix_key      String   @map("pix_key")
  email        String?  @unique
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  @@map("receivers")
}

